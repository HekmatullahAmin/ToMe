<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityWholeUIRelativeLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mainActivityViewPagerId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mainActivityTabLayoutId" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/mainActivityTabLayoutId"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/mainActivityTodoTabItemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_to_do" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/mainActivityCalculationTabItemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_calculation" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/mainActivityTimeTableTabItemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_time_table_24" />
    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>