<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customArchivedEntryRowMainUiRelativeLayoutId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/customArchivedEntryRowCheckBoxCircleImageViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="5dp"
        android:src="@drawable/ic_baseline_done_24"
        android:visibility="gone"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:id="@+id/customArchivedEntryRowFirstRelativeLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/customArchivedEntryRowFirstLinearLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customArchivedEntryRowDateAndTimeTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/custom_entry_row_date_and_time_text_view"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/customArchivedEntryRowItemNameTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/custom_entry_row_item_name_text_view"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/customArchivedEntryRowSecondLinearLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/customArchivedEntryRowFirstLinearLayoutId"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/customArchivedEntryRowThirdLinearLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/customArchivedEntryRowYouWillGiveAmountColumnTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="@string/custom_entry_row_you_will_give_amount_column_text_view"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/customArchivedEntryRowAmountLostCurrencySymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/currency_symbol_text_view" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/customArchivedEntryRowFourthLinearLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/customArchivedEntryRowYouWillGetAmountColumnTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="@string/custom_entry_row_you_will_get_amount_column_text_view"
                    android:textColor="@color/green" />

                <TextView
                    android:id="@+id/customArchivedEntryRowAmountGainCurrencySymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/currency_symbol_text_view" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>