<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/todayActivityWholeUIRelativeLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TodayActivity">

    <include
        android:id="@+id/todayActivityToolbarId"
        layout="@layout/custom_toolbar" />


    <RelativeLayout
        android:id="@+id/todayActivitySecondRelativeLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/todayActivityToolbarId"
        android:padding="20dp">

        <ImageView
            android:id="@+id/todayActivityImageViewId"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/today" />

        <TextView
            android:id="@+id/todayActivityTasksCountTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/todayActivityTodayTextViewId"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/todayActivityImageViewId"
            android:text="@string/today_activity_tasks_count_text_view"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/todayActivityTodayTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/todayActivityImageViewId"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/todayActivityImageViewId"
            android:text="@string/today_activity_today_text_view"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/todayActivityRecyclerViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/todayActivityImageViewId"
            android:layout_marginTop="20dp"
            android:padding="10dp" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/todayActivityAddTaskFABId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        app:backgroundTint="@android:color/transparent"
        app:elevation="1dp"
        app:fabCustomSize="70dp"
        app:maxImageSize="40dp"
        app:pressedTranslationZ="30dp"
        app:srcCompat="@drawable/ic_baseline_add_24" />
</RelativeLayout>