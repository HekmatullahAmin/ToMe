<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advertisePartialNativeLayoutMainId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/advertisePartialNativeLayoutIconImageViewId"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/advertisePartialNativeLayoutIconImageViewId"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/advertisePartialNativeLayoutHeadlineTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@id/advertisePartialNativeLayoutAdAndCloseLinearLayoutId"
                    android:text="@string/advertise_headline_text_view"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/advertisePartialNativeLayoutAdAndCloseLinearLayoutId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/advertisePartialNativeLayoutAttributionTextViewId"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="@string/advertise_attribution_text_view"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/advertisePartialNativeLayoutCloseAdvertiseImageViewId"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/cancel_advertise" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/advertisePartialNativeLayoutAdvertiserTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="@string/advertise_advertiser_text_view"
                android:textSize="12sp" />

            <Button
                android:id="@+id/advertisePartialNativeLayoutCallToActionButtonId"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/custom_button_background"
                android:text="@string/advertise_call_to_action_button" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.gms.ads.nativead.NativeAdView>