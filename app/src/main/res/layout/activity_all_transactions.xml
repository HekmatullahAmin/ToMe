<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/allTransactionsActivityWholeUIRelativeLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AllTransactionsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/allTransactionsActivityTopCardViewId"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:id="@+id/allTransactionsActivityFirstLinearLayoutId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/allTransactionsActivityTransactionsTextViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/all_transactions_activity_transactions_text_view"
                android:textSize="30sp" />

            <RelativeLayout
                android:id="@+id/allTransactionsActivitySecondRelativeLayoutId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/allTransactionsActivityTotalSpentTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_transactions_activity_total_spent_text_view"
                    android:textSize="20sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_toLeftOf="@id/allTransactionsActivitySpentAmountCurrencySymbolTextViewId"
                    android:layout_toRightOf="@id/allTransactionsActivityTotalSpentTextViewId">

                    <TextView
                        android:id="@+id/allTransactionsActivityTotalSpentAmountTextViewId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="@string/all_transactions_activity_total_spent_amount_text_view"
                        android:textColor="@color/red"
                        android:textSize="20sp" />
                </ScrollView>

                <TextView
                    android:id="@+id/allTransactionsActivitySpentAmountCurrencySymbolTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/allTransactionsActivityTotalSpentTextViewId"
                    android:layout_alignParentRight="true"
                    android:text="@string/currency_symbol_text_view" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/allTransactionsActivityThirdRelativeLayoutId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/allTransactionsActivityTotalReceivedTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_transactions_activity_total_received_text_view"
                    android:textSize="20sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_toLeftOf="@id/allTransactionsActivityReceivedAmountCurrencySymbolTextViewId"
                    android:layout_toRightOf="@id/allTransactionsActivityTotalReceivedTextViewId">

                    <TextView
                        android:id="@+id/allTransactionsActivityTotalReceivedAmountTextViewId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="@string/all_transactions_activity_total_received_amount_text_view"
                        android:textColor="@color/green"
                        android:textSize="20sp" />
                </ScrollView>

                <TextView
                    android:id="@+id/allTransactionsActivityReceivedAmountCurrencySymbolTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/allTransactionsActivityTotalReceivedTextViewId"
                    android:layout_alignParentRight="true"
                    android:text="@string/currency_symbol_text_view" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allTransactionsActivityRecyclerViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/allTransactionsActivityTopCardViewId" />

    <TextView
        android:id="@+id/allTransactionsActivityNoTransactionsYetTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/all_transactions_activity_no_transactions_yet_text_view"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>