<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customTaskRowMainUiRelativeLayoutId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/customTaskRowCheckBoxId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/customTaskRowTaskNoteId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/customTaskRowCheckBoxId"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/customTaskRowCheckBoxId"
        android:text="@string/custom_task_row_your_notes_go_here_text_view"
        android:textSize="20sp" />
</RelativeLayout>